@page
@model FoodTrackerApp.Pages.FoodMeal.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4>My Food Meal</h4>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodMeal[0].Food)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodMeal[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodMeal[0].Portion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FoodMeal) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Food.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Portion)
            </td>
            <td>              
                <a href="FoodMeal/Edit/?mealId=@item.MealId&foodId=@item.FoodID">Edit</a> |
                <a href="FoodMeal/Details/?mealId=@item.MealId&foodId=@item.FoodID">Details</a> |
                <a href="FoodMeal/Delete/?mealId=@item.MealId&foodId=@item.FoodID">Delete</a>                
            </td>
        </tr>
}
    </tbody>
</table>
