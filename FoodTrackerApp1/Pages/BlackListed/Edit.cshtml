@page
@model FoodTrackerApp.Pages.BlackListed.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BlacklistedFood</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlacklistedFood.UserId" />
            <div class="form-group">
                <label asp-for="BlacklistedFood.Foods" class="control-label"></label>
                <select asp-for="BlacklistedFood.Foods" class="form-control" />
                <span asp-validation-for="BlacklistedFood.Foods" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlacklistedFood.CreatedOn" class="control-label"></label>
                <input asp-for="BlacklistedFood.CreatedOn" class="form-control" />
                <span asp-validation-for="BlacklistedFood.CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
