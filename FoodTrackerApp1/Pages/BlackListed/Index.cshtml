@page
@model FoodTrackerApp.Pages.BlackListed.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (!Model.Foods.Any())
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}else {

    <p>
        <a asp-page="Create">Add New</a>
    </p>
}


<table class="table">
      <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].BlacklistedFoods[0].CreatedOn)
            </th>
        </tr>
    </thead>
    <tbody>
    <tbody>
        @foreach (var item in Model.Foods)
        {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.FoodName)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.BlacklistedFoods[0].CreatedOn)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.FoodName">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.FoodName">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
